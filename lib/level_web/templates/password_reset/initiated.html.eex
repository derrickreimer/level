<%= if get_flash(@conn, :error) do %>
  <div class="px-4 py-4 bg-red-lightest border-b-2 border-red text-red text-center font-bold" role="alert"><%= get_flash(@conn, :error) %></div>
<% end %>

<%= if get_flash(@conn, :info) do %>
  <div class="px-4 py-4 bg-green-lightest border-b-2 border-green text-green-dark text-center font-bold" role="alert"><%= get_flash(@conn, :info) %></div>
<% end %>

<div class="bg-grey-lighter h-full min-h-screen">
  <div class="container mx-auto px-4 py-24 flex justify-center max-w-400px">
    <div class="w-full">
      <div class="mb-8 flex justify-center">
        <%= link to: page_path(@conn, :index), class: "logo" do %>
          <%= img_tag(static_path(@conn, "/images/logo-md.svg"), alt: "Level") %>
        <% end %>
      </div>

      <div class="px-8 sm:px-12 py-8 bg-white rounded-lg border">
        <h1 class="text-center text-2xl font-extrabold text-dusty-blue-darkest pb-8">Reset my password</h1>
        <p class="text-center">Check your email for instructions ğŸ‘</p>
      </div>

      <div class="px-8 pt-6 pb-24 text-sm text-dusty-blue-dark text-center">
        <%= gettext "Nevermind, I remembered!" %>
        <%= link gettext("Sign in"), to: session_path(@conn, :new), class: "text-blue" %>
      </div>
    </div>
  </div>
</div>
